<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/text_view"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:textSize="18sp"
            android:textColor="#FFFF"
            android:background="#F000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:id="@+id/text_align"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/text_view"
            >

            <TextView
                android:id="@+id/tv_align_baseline"
                android:text="BASELINE"
                android:textColor="#FFFF"
                android:background="#8000"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/tv_align_ascent"
                android:text="ASCENT"
                android:textColor="#FFFF"
                android:background="#8000"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/tv_align_center"
                android:text="CENTER"
                android:textColor="#FFFF"
                android:background="#8000"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/tv_align_descent"
                android:text="DESCENT"
                android:textColor="#FFFF"
                android:background="#8000"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />

        </LinearLayout>

        <TextView
            android:text="Text Size"
            android:id="@+id/tv_text_size"
            android:textColor="#FFFF"
            android:background="#8000"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_align"
            app:layout_constraintStart_toStartOf="parent"
            />

        <SeekBar
            android:id="@+id/sb_size"
            android:min="0"
            android:max="100"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_text_size"
            app:layout_constraintBottom_toBottomOf="@id/tv_text_size"
            app:layout_constraintStart_toEndOf="@id/tv_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:text="Padding Top"
            android:id="@+id/tv_padding_top"
            android:textColor="#FFFF"
            android:background="#8000"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_text_size"
            app:layout_constraintStart_toStartOf="parent"
            />

        <SeekBar
            android:id="@+id/sb_padding_top"
            android:min="0"
            android:max="200"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_padding_top"
            app:layout_constraintBottom_toBottomOf="@id/tv_padding_top"
            app:layout_constraintStart_toEndOf="@id/tv_padding_top"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:text="Padding Bottom"
            android:id="@+id/tv_padding_bottom"
            android:textColor="#FFFF"
            android:background="#8000"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_padding_top"
            app:layout_constraintStart_toStartOf="parent"
            />

        <SeekBar
            android:id="@+id/sb_padding_bottom"
            android:min="0"
            android:max="200"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_padding_bottom"
            app:layout_constraintBottom_toBottomOf="@id/tv_padding_bottom"
            app:layout_constraintStart_toEndOf="@id/tv_padding_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:text="Padding Left"
            android:id="@+id/tv_padding_left"
            android:textColor="#FFFF"
            android:background="#8000"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_padding_bottom"
            app:layout_constraintStart_toStartOf="parent"
            />

        <SeekBar
            android:id="@+id/sb_padding_left"
            android:min="0"
            android:max="200"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_padding_left"
            app:layout_constraintBottom_toBottomOf="@id/tv_padding_left"
            app:layout_constraintStart_toEndOf="@id/tv_padding_left"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:text="Padding Right"
            android:id="@+id/tv_padding_right"
            android:textColor="#FFFF"
            android:background="#8000"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_padding_left"
            app:layout_constraintStart_toStartOf="parent"
            />

        <SeekBar
            android:id="@+id/sb_padding_right"
            android:min="0"
            android:max="200"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_padding_right"
            app:layout_constraintBottom_toBottomOf="@id/tv_padding_right"
            app:layout_constraintStart_toEndOf="@id/tv_padding_right"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:text="Margin Top"
            android:id="@+id/tv_margin_top"
            android:textColor="#FFFF"
            android:background="#8000"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_padding_right"
            app:layout_constraintStart_toStartOf="parent"
            />

        <SeekBar
            android:id="@+id/sb_margin_top"
            android:min="0"
            android:max="200"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_margin_top"
            app:layout_constraintBottom_toBottomOf="@id/tv_margin_top"
            app:layout_constraintStart_toEndOf="@id/tv_margin_top"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:text="Margin Bottom"
            android:id="@+id/tv_margin_bottom"
            android:textColor="#FFFF"
            android:background="#8000"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_margin_top"
            app:layout_constraintStart_toStartOf="parent"
            />

        <SeekBar
            android:id="@+id/sb_margin_bottom"
            android:min="0"
            android:max="200"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_margin_bottom"
            app:layout_constraintBottom_toBottomOf="@id/tv_margin_bottom"
            app:layout_constraintStart_toEndOf="@id/tv_margin_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:text="Margin Left"
            android:id="@+id/tv_margin_left"
            android:textColor="#FFFF"
            android:background="#8000"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_margin_bottom"
            app:layout_constraintStart_toStartOf="parent"
            />

        <SeekBar
            android:id="@+id/sb_margin_left"
            android:min="0"
            android:max="200"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_margin_left"
            app:layout_constraintBottom_toBottomOf="@id/tv_margin_left"
            app:layout_constraintStart_toEndOf="@id/tv_margin_left"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:text="Margin Right"
            android:id="@+id/tv_margin_right"
            android:textColor="#FFFF"
            android:background="#8000"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_margin_left"
            app:layout_constraintStart_toStartOf="parent"
            />

        <SeekBar
            android:id="@+id/sb_margin_right"
            android:min="0"
            android:max="200"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_margin_right"
            app:layout_constraintBottom_toBottomOf="@id/tv_margin_right"
            app:layout_constraintStart_toEndOf="@id/tv_margin_right"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>