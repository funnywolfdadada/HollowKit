<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.funnywolf.hollowkit.view.StatefulLayout
        android:id="@+id/stateful"
        android:minWidth="100dp"
        android:minHeight="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:background="#03A9F4"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/stateful"
        app:layout_constraintBottom_toBottomOf="@id/stateful"
        app:layout_constraintEnd_toStartOf="@id/stateful"
        />

    <View
        android:background="#03A9F4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@id/stateful"
        app:layout_constraintStart_toStartOf="@id/stateful"
        app:layout_constraintEnd_toEndOf="@id/stateful"
        />

    <View
        android:background="#03A9F4"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/stateful"
        app:layout_constraintBottom_toBottomOf="@id/stateful"
        app:layout_constraintStart_toEndOf="@id/stateful"
        />

    <View
        android:background="#03A9F4"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/stateful"
        app:layout_constraintStart_toStartOf="@id/stateful"
        app:layout_constraintEnd_toEndOf="@id/stateful"
        />

    <Button
        android:id="@+id/next"
        android:text="NEXT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>